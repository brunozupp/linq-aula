@model MeuSite.Models.Produto

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="mt-40">
        <ul class="collection with-header">
            <li class="collection-header"><h4>Detalhes do produto</h4></li>
            <li class="collection-item">
                <strong>Código</strong> -
                @Html.DisplayFor(model => model.ID)
            </li>
            <li class="collection-item">
                <strong>@Html.DisplayNameFor(model => model.Nome)</strong> -
                @Html.DisplayFor(model => model.Nome)
            </li>
            <li class="collection-item">
                <strong>@Html.DisplayNameFor(model => model.Descricao)</strong> -
                @Html.DisplayFor(model => model.Descricao)
            </li>
            <li class="collection-item">
                <strong>@Html.DisplayNameFor(model => model.Quantidade)</strong> -
                @Html.DisplayFor(model => model.Quantidade)
            </li>
            <li class="collection-item">
                <strong>@Html.DisplayNameFor(model => model.ValorUnitario)</strong> - R$
                @Html.DisplayFor(model => model.ValorUnitario)
            </li>
            <li class="collection-item">
                <strong>@Html.DisplayNameFor(model => model.Total)</strong> - R$
                @Html.DisplayFor(model => model.Total)
            </li>
        </ul>
    </div>
    <a href="@Url.Action("Save", "Produto", new { id = Model.ID })" class="btn blue darken-2 right">
        Editar
    </a>
</div>

