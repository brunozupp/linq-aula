@if (ViewBag.Count > 0)
{
    <div class="blue darken-2">
        <div class="container">

            <div class="section center-align">
                <h4 class="line-title-white white-text">Alguns dos nossos produtos</h4>
            </div>

            <div class="row" style="padding-bottom:40px">
                <div class="col s12">
                    <div class="carousel carousel-slider">

                        @{ var cont = 1; }

                        @foreach (var produto in ViewBag.Produtos)
                        {
                            var url = "/Content/midia/products/produto" + cont + ".jpg";

                            <div class="card carousel-item">
                                <div class="card-image">
                                    <img src="@url" class="img-carousel-custom" />
                                    <span class="card-title card-title-product-bg"><strong>@produto.Nome</strong></span>
                                </div>

                            </div>

                            cont++;
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

